<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aisleshare.CurrentList">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true"
        android:id="@+id/currentItems"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/float_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_plusIconColor="#FFFFFF"
            fab:fab_colorNormal="#23ff14"
            fab:fab_colorPressed="#18d50f"
            android:layout_gravity="right|bottom"
            android:alpha=".75" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You do not have any items."
            android:id="@+id/empty_notice"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:visibility="invisible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="#bc3e47fd"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:id="@+id/undo_box">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items Deleted"
                android:id="@+id/textView2"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNDO"
                android:id="@+id/undo" />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
